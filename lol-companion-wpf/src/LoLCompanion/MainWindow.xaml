<Window x:Class="LoLCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Companion" Height="600" Width="350"
        Background="#1e1e1e" Foreground="#ffffff">
    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Buttons Header -->
        <DockPanel Grid.Row="0" Background="#2d2d2d">
            <Button Name="BuildTab" Click="BuildTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Build</Button>
            <Button Name="BenchTab" Click="BenchTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Bench</Button>
            <Button Name="SettingsTab" Click="SettingsTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Settings</Button>
            <Button Click="CloseWindow" Background="#c41e3a" Foreground="#ffffff" BorderThickness="0" HorizontalAlignment="Right" Width="35">X</Button>
        </DockPanel>

        <!-- Build Tab Content -->
        <ScrollViewer Name="BuildTabContent" Grid.Row="1">
            <Border Padding="15" Background="#1e1e1e">
                <StackPanel>
                    <TextBlock Name="ChampionStatus" Foreground="#c41e3a" FontSize="16" Margin="0,0,0,10">No champion selected</TextBlock>
                    <TextBlock Foreground="#888888" FontSize="12" Margin="0,0,0,20">Waiting for champion select...</TextBlock>

                    <!-- Items Section -->
                    <TextBlock Text="Items" Foreground="#c41e3a" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Core Build" Foreground="#888888" FontSize="11" Margin="0,0,0,5"/>
                    <TextBlock Name="CoreItems" Foreground="#ffffff" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap"/>

                    <TextBlock Text="Optional" Foreground="#888888" FontSize="11" Margin="0,0,0,5"/>
                    <TextBlock Name="OptionalItems" Foreground="#ffffff" FontSize="12" Margin="0,0,0,20" TextWrapping="Wrap"/>

                    <!-- Runes Section -->
                    <TextBlock Text="Runes" Foreground="#c41e3a" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Name="RunesDisplay" Foreground="#ffffff" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Bench Tab Content (Hidden by default) -->
        <ScrollViewer Name="BenchTabContent" Grid.Row="1" Visibility="Collapsed">
            <Border Padding="15" Background="#1e1e1e">
                <StackPanel>
                    <TextBlock Text="Bench swaps go here" Foreground="#ffffff" FontSize="12"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Settings Tab Content (Hidden by default) -->
        <ScrollViewer Name="SettingsTabContent" Grid.Row="1" Visibility="Collapsed">
            <Border Padding="15" Background="#1e1e1e">
                <StackPanel>
                    <TextBlock Text="Auto Accept" Foreground="#c41e3a" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Foreground="#888888" FontSize="10" Margin="0,0,0,20">Enabled - Auto-accepts matches automatically</TextBlock>

                    <TextBlock Text="Auto Import" Foreground="#c41e3a" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Foreground="#888888" FontSize="10" Margin="0,0,0,20">Enabled - Auto-imports builds in champion select</TextBlock>

                    <TextBlock Text="Status" Foreground="#c41e3a" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Name="StatusText" Foreground="#888888" FontSize="11">League Client: Disconnected</TextBlock>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
