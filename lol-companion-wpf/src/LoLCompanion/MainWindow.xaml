<Window x:Class="LoLCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Companion" Height="50" Width="350"
        Background="#1e1e1e" Foreground="#ffffff"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="False">
    <Grid Background="#2d2d2d">
        <DockPanel>
            <Button Click="CloseWindow" Background="#c41e3a" Foreground="#ffffff" BorderThickness="0" HorizontalAlignment="Right" Width="35" Height="50">X</Button>
            <Button Name="BuildTab" Click="BuildTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Build</Button>
            <Button Name="BenchTab" Click="BenchTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Bench</Button>
            <Button Name="SettingsTab" Click="SettingsTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8" HorizontalAlignment="Left">Settings</Button>
        </DockPanel>
    </Grid>
</Window>
