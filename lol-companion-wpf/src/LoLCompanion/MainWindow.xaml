<Window x:Class="LoLCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoL Companion" Height="600" Width="350"
        Background="#1e1e1e" Foreground="#ffffff"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="NoResize"
        Margin="0" Padding="0">
    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Buttons Header -->
        <Grid Grid.Row="0" Background="#2d2d2d" MouseLeftButtonDown="Header_MouseDown">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Name="BuildTab" Click="BuildTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8">Build</Button>
                <Button Name="BenchTab" Click="BenchTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8">Bench</Button>
                <Button Name="SettingsTab" Click="SettingsTab_Click" Background="#2d2d2d" Foreground="#ffffff" BorderThickness="0" Padding="15,8">Settings</Button>
            </StackPanel>
            <Button Click="CloseWindow" Background="#c41e3a" Foreground="#ffffff" BorderThickness="0" HorizontalAlignment="Right" Width="35">X</Button>
        </Grid>

        <!-- Build Tab Content -->
        <ScrollViewer Name="BuildTabContent" Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Background="#1e1e1e">
            <StackPanel Background="#1e1e1e" Margin="10,10,10,10">
                <TextBlock Name="ChampionStatus" Foreground="#c41e3a" FontSize="14" Margin="0,0,0,5">No champion selected</TextBlock>
                <TextBlock Foreground="#555555" FontSize="11" Margin="0,0,0,10">Waiting for champion select...</TextBlock>

                <!-- Items Section -->
                <TextBlock Text="Items" Foreground="#c41e3a" FontSize="12" FontWeight="Bold" Margin="0,10,0,8"/>
                <TextBlock Text="Core Build" Foreground="#555555" FontSize="10" Margin="0,0,0,3"/>
                <TextBlock Name="CoreItems" Foreground="#cccccc" FontSize="11" Margin="0,0,0,10" TextWrapping="Wrap"/>

                <TextBlock Text="Optional" Foreground="#555555" FontSize="10" Margin="0,0,0,3"/>
                <TextBlock Name="OptionalItems" Foreground="#cccccc" FontSize="11" Margin="0,0,0,15" TextWrapping="Wrap"/>

                <!-- Runes Section -->
                <TextBlock Text="Runes" Foreground="#c41e3a" FontSize="12" FontWeight="Bold" Margin="0,10,0,8"/>
                <TextBlock Name="RunesDisplay" Foreground="#cccccc" FontSize="11" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Bench Tab Content (Hidden by default) -->
        <ScrollViewer Name="BenchTabContent" Grid.Row="1" Visibility="Collapsed" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Background="#1e1e1e">
            <StackPanel Background="#1e1e1e" Margin="10,10,10,10">
                <TextBlock Text="Bench swaps go here" Foreground="#cccccc" FontSize="11"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Settings Tab Content (Hidden by default) -->
        <ScrollViewer Name="SettingsTabContent" Grid.Row="1" Visibility="Collapsed" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Background="#1e1e1e">
            <StackPanel Background="#1e1e1e" Margin="10,10,10,10">
                <TextBlock Text="Auto Accept" Foreground="#c41e3a" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Foreground="#555555" FontSize="10" Margin="0,0,0,10">Enabled - Auto-accepts matches automatically</TextBlock>

                <TextBlock Text="Auto Import" Foreground="#c41e3a" FontSize="12" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock Foreground="#555555" FontSize="10" Margin="0,0,0,10">Enabled - Auto-imports builds in champion select</TextBlock>

                <TextBlock Text="Status" Foreground="#c41e3a" FontSize="12" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock Name="StatusText" Foreground="#555555" FontSize="10">League Client: Disconnected</TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
